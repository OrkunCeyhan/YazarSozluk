@using EntityLayer.Concrete
@model List<Category> /* model olusturduk liste olarak kategori sınıfını kullan*/

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
  
        <th>Durum</th>
    </tr>
    @foreach(var item in Model)/*4 parametresi var; 1.değişken türü (var) 2. değişken isim(item) 3. içinde(in)
        4. değerlerin alınacağı isim (model)*/
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryStatus</td>
                </tr>
            }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a> 
